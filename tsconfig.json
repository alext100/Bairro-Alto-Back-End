{
  "compilerOptions": {
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "lib": ["ES2015", "DOM"],
    "rootDir": "./",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "moduleResolution": "Node"
  },
  "include": ["./**/*.ts", ".eslintrc.cjs", "./build/**/*.ts"],
  "exclude": ["./build", "node_modules", "coverage"]
}
